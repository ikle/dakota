#!/usr/bin/python3

import cairo, sheet, math
import symbol as s

import test.arc as TA

from sheet import mark

surface, c = sheet.create (8, 20, 20)

x0, y0, x1, y1, α = 10, 2, 18, 17, math.radians (60)

c.move_to (x0, y0)
TA.arc_to (c, x1, y1, α)
c.stroke ()

c.move_to (x0, y0)
TA.arc_to (c, x1, y1, α, True)

c.move_to (1, 7)
s.arc_to (c, 1, 13, math.radians (320))
c.stroke ()

c.move_to (2, 8)
s.mark_to (c, 2, 7, "dot")
s.mark_to (c, 4, 7, "arrow")
s.arc_to (c, 7, 10, math.radians (90))
s.arc_to (c, 4, 13, math.radians (90))
s.mark_to (c, 2, 13, "arrow")

c.move_to (3, 6)
s.mark_to (c, 3, 7, "odot")

c.move_to (3, 9)
c.line_to (3, 11)
c.move_to (2, 9.5)
s.mark_to (c, 3, 9.5, "rise")
c.move_to (2, 10.5)
s.mark_to (c, 3, 10.5, "fall")

s.gate (c, 7.5, 15)
s.gate (c, 7.5, 12, "1")
s.gate (c, 7.5, 9, "=1", False)

s.pnp_ce (c, 7.5, 6)
s.npn_ec (c, 7.5, 3.5)
s.pnp_ec (c, 10, 6)
s.npn_ce (c, 10, 3.5)

s.diode (c, 5.0, 4.0)
s.resistor (c, 5.0, 5.0)
s.capasitor (c, 5.0, 6.0, True)
s.inductor (c, 5.0, 3.0)
s.inductor (c, 6.0, 2.0, True)

surface.write_to_png ("proto/symbol-render.png")
